<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- For Android Emulator accessing host's localhost -->
        <domain includeSubdomains="true">localhost</domain> <!-- If you are using a custom setup or different local domain -->
        <!-- Add your computer's actual network IP if testing on a physical device -->
        <!-- e.g., <domain includeSubdomains="true">192.168.1.100</domain> -->
    </domain-config>
    <!-- You can also have a <base-config cleartextTrafficPermitted="false" />
         to explicitly deny for others, though it's default -->
</network-security-config>